{
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "https://anime-countdown-latest.onrender.com/sitemap.xml" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/anime-countdown-app/browser"
      }
    }
  ]
 }